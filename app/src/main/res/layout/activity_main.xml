<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:background="@color/background"
    android:padding="30dp">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trabalho Deezer"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="40dp"/>


    <TextView
        android:id="@+id/help_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Faça sua busca"
        android:layout_below="@id/title_text_view"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        />

    <RelativeLayout
        android:id="@+id/content_menu_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/Spotlight"
        android:padding="40dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/help_text_view">

        <Button
            android:id="@+id/musica_menu_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Música"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="@color/background"/>

        <Button
            android:id="@+id/album_menu_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Álbum"
            android:textSize="30dp"
            android:background="@color/background"
            android:textColor="@color/white"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/artista_menu_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Artista"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="@color/background"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>




</RelativeLayout>