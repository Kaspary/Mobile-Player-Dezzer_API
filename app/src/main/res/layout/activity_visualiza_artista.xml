<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.VisualizaArtistaActivity"
    android:background="@color/background"
    android:padding="30dp">

    <TextView
        android:id="@+id/nome_artista_visualiza_artista_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do Artista"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:ellipsize="end"/>

    <ImageView
        android:id="@+id/imagem_artista_visualiza_artista_imageview"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@color/white"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/albuns_visualiza_artista_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 Albuns"
        android:layout_below="@+id/imagem_artista_visualiza_artista_imageview"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/seguidores_visualiza_artista_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2k Seguidores"
        android:textColor="@color/white"
        android:layout_below="@+id/albuns_visualiza_artista_textView"/>

    <Button
        android:id="@+id/visualisa_albuns_visualiza_artista_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Visualizar Ã¡lbuns do artista"
        android:textColor="@color/white"
        android:background="@color/Spotlight"
        android:layout_alignParentBottom="true"
        android:padding="10dp"/>

</RelativeLayout>